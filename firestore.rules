rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is a manager for the client
    function isManager(clientId) {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/clients/$(clientId)/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/clients/$(clientId)/users/$(request.auth.uid)).data.role == 'manager';
    }
    
    // Helper function to check if user is super admin
    function isSuperAdmin() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/superadmins/$(request.auth.uid));
    }
    
    // Clients collection - only super admins can modify
    match /clients/{clientId} {
      allow read: if true; // Allow public read for client existence
      allow create, update, delete: if isSuperAdmin();
      
      // Restaurant settings (public readable, manager writable)
      match /settings/{document=**} {
        allow read: if true; // Public read for customer menu
        allow write: if isManager(clientId) || isSuperAdmin();
      }
      
      // Banners (public readable, manager writable)
      match /banners/{bannerId} {
        allow read: if true; // Public read for customer menu
        allow create, update, delete: if isManager(clientId) || isSuperAdmin();
      }
      
      // Categories (public readable, manager writable)
      match /categories/{categoryId} {
        allow read: if true; // Public read for customer menu
        allow create, update, delete: if isManager(clientId) || isSuperAdmin();
      }
      
      // Menu Items (public readable, manager writable)
      match /menuItems/{itemId} {
        allow read: if true; // Public read for customer menu
        allow create, update, delete: if isManager(clientId) || isSuperAdmin();
      }
      
      // Users (role-based access)
      match /users/{userId} {
        allow read: if isAuthenticated();
        allow create, update, delete: if isSuperAdmin();
      }
    }
    
    // Super Admins collection (only super admins can access)
    match /superadmins/{adminId} {
      allow read, write: if isSuperAdmin();
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

